<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.godseop.apple.repository.mapper.DummyMapper">

    <select id="selectDummyList" parameterType="condition" resultType="dummy">
        SELECT
            D.id
          , D.bool
          , D.count
          , D.name
          , D.time
          , D.yn
        FROM
            T_DUMMY D
        <include refid="dummyListCondition"/>
        <include refid="sorting"/>
        <include refid="paging"/>
    </select>

    <select id="selectDummyListCount" parameterType="condition" resultType="int">
        SELECT
            COUNT(*)
        FROM
            T_DUMMY
        <include refid="dummyListCondition"/>
    </select>

    <sql id="dummyListCondition">
        WHERE
            1 = 1
        AND D.bool = 'Y'
    </sql>





    <sql id="paging">
        <if test="startRowNumber != null and startRowNumber != ''">
        LIMIT #{startRowNumber}, #{pageSize}
        </if>
    </sql>

    <sql id="sorting">
        <if test="orderKey != null and orderKey != ''">
        ORDER BY ${orderKey} ${orderSort}
        </if>
    </sql>

