<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.godseop.apple.repository.mapper.DummyMapper">

    <select id="selectDummyList" parameterType="condition" resultType="dummy">
        SELECT
            D.id
          , D.bool  -- IF(D.bool, 'true', 'false') AS bool
          , D.count
          , D.name
          , D.time
          , D.yn
        FROM
            T_DUMMY D
        <where>
            <include refid="dummyListCondition"/>
        </where>
        <include refid="sorting"/>
        <include refid="paging"/>
    </select>

    <select id="selectDummyListCount" parameterType="condition" resultType="int">
        SELECT
            COUNT(*)
        FROM
            T_DUMMY D
        <where>
            <include refid="dummyListCondition"/>
        </where>
    </select>

    <sql id="dummyListCondition">
        AND 1=1
    </sql>


    <select id="selectDummy" parameterType="string" resultType="dummy">
        SELECT
            D.id
          , D.bool
          , D.count
          , D.name
          , D.time
          , D.yn
        FROM
            T_DUMMY D
        WHERE
            D.id = #{id}
    </select>

    <insert id="insertDummy" parameterType="dummy" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO T_DUMMY (
            bool
          , count
          , name
          , time
          , yn
        ) VALUES (
            #{bool}
          , #{count}
          , #{name}
          , #{time}
          , #{yn}
        )
    </insert>

    <update id="updateDummy" parameterType="dummy">
        UPDATE T_DUMMY
        SET
            bool = #{bool}
          , count = #{count}
          , name = #{name}
          , time = #{time}
          , yn = #{yn}
        WHERE
            id = #{id}
    </update>

    <update id="upsertDummy" parameterType="dummy" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO T_DUMMY (
            id
          , bool
          , count
          , name
          , time
          , yn
        ) VALUES (
            #{id}
          , #{bool}
          , #{count}
          , NULLIF(#{name}, '')
          , #{time}
          , #{yn}
        ) ON DUPLICATE KEY UPDATE
            bool = #{bool}
          , count = #{count}
          , name = NULLIF(#{name}, '')
          , time = #{time}
          , yn = #{yn}
    </update>

    <delete id="deleteDummy" parameterType="string">
        DELETE FROM T_DUMMY
        WHERE
            id = #{id}
    </delete>


    <!-- int에 대해 startRowNumber != '' 테스트하지말것 0일때 예상치못한 결과가 나옴 -->
    <sql id="paging">
        <if test="startRowNumber != null and startRowNumber gte 0">
            LIMIT #{startRowNumber}, #{pageSize}
        </if>
    </sql>


    <sql id="sorting">
        <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(orderKey)">
            ORDER BY ${orderKey} ${orderSort}
        </if>
    </sql>

</mapper>